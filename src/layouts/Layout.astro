---

import { fade } from 'astro:transitions'
import { ViewTransitions } from 'astro:transitions'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Rintima Lda" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/src/assets/Rintima_Logo.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<main 
		transition:animate={fade({ duration: '0.4s' })}>
			<Header/>
		<slot />
		</main>
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		--frameWindowRadius: 75% 75% 0 0;
		--frameWindowRadiusReversed: 0 0 75% 75%; 
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}


	@font-face {
    font-family: 'Trirong';
    src: url('public/fonts/Trirong-Black.woff2') format('woff2');
    font-weight: 900;
    font-style: normal;
    font-display: swap;
}

@font-face {
    font-family: 'Trirong';
    src: url('public/fonts/Trirong-ExtraBold.woff2') format('woff2');
    font-weight: bold;
    font-style: normal;
    font-display: swap;
}

@font-face {
    font-family: 'Trirong';
    src: url('public/fonts/Trirong-Bold.woff2') format('woff2');
    font-weight: bold;
    font-style: normal;
    font-display: swap;
}

@font-face {
    font-family: 'Jacques Francois';
    src: url('public/fonts/JacquesFrancois-Regular.woff2') format('woff2');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}
	html {
		font-family: 'Trirong', 'Jacques Francois', system-ui, sans-serif;
		background: #99c5d9;
		background-size: 224px;
	}

	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		font-size: 20px;
		line-height: 1.6;
	}


</style>
