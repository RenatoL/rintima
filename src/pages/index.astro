---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Frame from '../components/PictureFrame.astro';
---

<Layout title="Rintima Lingerie">
	<hr class="hr-line" style='width:80%;'>
	<hr class="hr-line" style='width:60%;'>
	<hr class="hr-line" style='width:40%;'>
		
		<div class="grid">

			<div class="div1">
          <Frame class="frame-window" imagePath='/src/assets/frames/bodouir-female-1.jpg' altText='Framed picture' />
          <Frame class="frame-square" imagePath='/src/assets/frames/beach-female-1.jpg' altText='Framed picture' />
      </div>

			<div class="div2">
				<Card
					title="Who are we?"
					body="A Lingerie, Swimwear, Beachwear and Underwear boutique with over 26 years of experience"
				/>
			</div>
			<div class="div3">
				<Card
					title="What we do."
					body="We assist you in selecting garments that fit you, your style, your comfort"
				/>
			</div>
			<div class="div4">
				<Frame class="frame-window-reversed" imagePath='/src/assets/frames/beach-female-2.jpg' altText='Framed picture' />

				<Frame class="frame-oval" imagePath='/src/assets/frames/beach-male-1.jpg' altText='Framed picture' />
			</div>

			<div class="div6">
				<Card
					title="Our brands."
					body="Premium, hand selected collections, to empower you, bolden you, functional or just cosy"
				/>
			</div>
		</div>

	<hr class="hr-line" style='width:40%;'>
	<hr class="hr-line" style='width:60%;'>
	<hr class="hr-line" style='width:80%;'>
</Layout>

<style>
	.grid {
display: inline-grid;
grid-template-columns: 1fr 1fr 1fr;
grid-template-rows: repeat(3, 1fr);
grid-column-gap: 2rem;
grid-row-gap: 2rem;

}

.div1 { grid-area: 1 / 1 / 2 / 2; 
		position: relative;
    display: flex;
    align-items: center;
	}
.div2 { grid-area: 1 / 2 / 2 / 4; 

	display: flex;
  justify-content: left;
  align-items: center;
}
.div3 { grid-area: 2 / 1 / 3 / 3; 

	display: flex;
  justify-content: right;
  align-items: center;}
.div4 { grid-area: 2 / 3 / 3 / 3; 
		position: relative;

	display: flex;
  justify-content: center;
  align-items: center;
	}
.div5 { grid-area: 3 / 1 / 4 / 2; }
.div6 { grid-area: 3 / 2 / 4 / 4; 

	display: flex;
  justify-content: left;
  align-items: center;
}

.flex-frame {
  display: flex;
  align-content: center;
}

.frame-window {
    box-sizing: content-box;
    object-fit: fill;
  width: 150px;
  height: 300px;
  border-radius: var(--frameWindowRadius);
  box-shadow: 3px 3px 5px rgb(0, 0, 0);
}

.frame-square {
    box-sizing: content-box;
    object-fit: fill;
  width: 200px;
  height: 200px;
  
  position: relative;
  left: -50px;
  z-index: -1;
  border-width: 2px;
  border-radius: 25% 25% 25% 25%;
  box-shadow: 3px 3px 10px rgb(0, 0, 0);
}

.frame-oval {
    box-sizing: content-box;
    object-fit: fill;
  width: 200px;
  height: 200px;
  position: relative;
  right: 50px;
  z-index: -1;
  border-width: 2px;
  border-radius: 100% 100% 100% 100%;
  box-shadow: 3px 3px 10px rgb(0, 0, 0);
}


.frame-window-reversed {
    box-sizing: content-box;
    object-fit: fill;
	width: 150px;
	height: 300px;
  border-radius: var(--frameWindowRadiusReversed);
  box-shadow: 3px 3px 5px rgb(0, 0, 0);
}

	.hr-line {
  margin-left: auto;
  margin-right: auto;
  margin-top: 1rem;
  margin-bottom: 1rem;
  border-width: 1px;
  --un-border-opacity: 1 !important;
  border-color: rgb(0 0 0 / var(--un-border-opacity)) !important;
  border-style: solid;
}
</style>
