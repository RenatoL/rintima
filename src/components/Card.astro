---
interface Props {
	title: string;
	body: string;
}

const {  title, body } = Astro.props;
---

<div class="card">
		<h2>
			{title}
		</h2>
		<p>
			{body}
		</p>
</div>

<style>
	.card {
		text-decoration: none;
		line-height: 1.4;
		padding: calc(0.5rem - 1px);
		border-radius: 2px;
		border: 2px solid black;
		color: black;
		background-color: #e8dcc4;
		opacity: 1;
		box-shadow: 3px 3px rgb(0, 0, 0);

	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
	}
	p {
		font-size: 0.75rem;
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
</style>
