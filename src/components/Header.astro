---
import { Picture } from "astro:assets";
import logo from "/src/assets/Rintima_Logo_Transparency_3_No_Text.png";


const imgFormats = import.meta.env.IMG_FORMATS
---

<header>
  <span>RINTIMA</span>

  <div class="image-container">
    <Picture
      class="header-image"
      src={logo}
      formats={[imgFormats]}
      alt="Logo"
    />
  </div>

  <span>LINGERIE</span>
</header>

<style>

  header {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
  }

  span {
    margin-bottom: 30px;
    font-family: "Trirong";
    font-size: 2.5rem;
    padding: 1rem;
  }

  .image-container {
    width: 100%;
  }

  .header-image {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  @media only screen and (max-width: 640px) {
    header {
      flex-wrap: wrap;
    }
  }
  
</style>
