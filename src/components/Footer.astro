---
import { Picture } from 'astro:assets'
import heroLogo from '/src/assets/Rintima_Logo_Transparency_3_No_Text.png'


const imgFormats = import.meta.env.IMG_FORMATS
---

<footer>
<div class="grid">
    <div class="div1">
      <div class="image-container">
        <a href="/" aria-label="Logo Image">
          <Picture class="footer-image"
            src={heroLogo}
            formats={[imgFormats]}
            alt="Logo"
          />
        </a>
      </div>
    </div>
  <div class="div2">
      <div class="text-wrapper">
        <h3>Address</h3>
        <p>Rua Jos√© Relvas 71C</p>
        <p>Parede</p>
      </div>
  </div>
  <div class="text-wrapper">
    <div  class="div3"> 
      <h3>Working Hours</h3>
  </div>
  <div class="div4">
    <h4>Monday - Friday</h4>
      <p>9h - 13h30</p>
      <p>15h - 19h</p>
    </div>
    <div class="div5">
      <h4>Saturday</h4>
      <p>9h - 13h30</p>
    </div>
  </div>
</div>
</footer>

<style>
@media only screen and (max-width: 767px) {
    header {
      flex-wrap: wrap;
    }
  }

  .grid {
display: grid;
grid-template-columns: 1fr repeat(2, 1fr);
grid-template-rows: repeat(3, auto);
grid-column-gap: 2rem;
grid-row-gap: 2rem;

}

.div1 { grid-area: 1 / 1 / 4 / 2; 
    display: flex;
    align-items: center;
  }
.div2 { grid-area: 1 / 2 / 2 / 3; 
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column; 
  }
.div3 { grid-area: 1 / 3 / 2 / 4; 

  display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column; }
.div4 { grid-area: 2 / 3 / 3 / 4; 

  display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  line-height: 0%; 
}
.div5 { grid-area: 3 / 3 / 4 / 4; 

  display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    line-height: 0%;
   }

    footer {
        display: flex;
        position: flex;
        justify-content: space-between;
        align-items: center;
    }

    .text-wrapper {
        /* margin-bottom: 30px; */
        font-family: 'Jacques Francois';
        text-align: left;
    }

    .image-container {
    width: 100%;
  }

  .footer-image {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
</style>