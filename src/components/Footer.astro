---
import { Picture } from 'astro:assets'
import heroLogo from '/src/assets/Rintima_Logo_Transparency_3_No_Text.png'


const imgFormats = import.meta.env.IMG_FORMATS
---

<footer>
<div class="grid">

  <div class="address-area">
      <div class="text-wrapper">
        <h3>Address</h3>
        <p>Rua Jos√© Relvas</p>
        <p>71C</p>
        <p>Parede</p>
      </div>
  </div>
  <div class="hours-area">
    <div class="text-wrapper">
        <h3>Working Hours</h3>
        <h4>Mon - Fri</h4>
        <p>9h - 13h30</p>
        <p>15h - 19h</p>
        <h4>Saturday</h4>
        <p>9h - 13h30</p>
    </div>
  </div>

  <div class="logo-area">
    <div class="image-container">
      <a href="/" aria-label="Logo Image">
        <Picture class="footer-image"
          src={heroLogo}
          formats={[imgFormats]}
          alt="Logo"
        />
      </a>
    </div>
  </div>
</div>
</footer>

<style>
  .grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-areas: "logo-area", "address-area", "hours-area";
    grid-column-gap: 2rem;
    grid-row-gap: 2rem;
}

.logo-area { 
    display: flex;
    align-items: center;
  }
/* .address-area { grid-area: 1 / 2 / 1 / 3;  }
.hours-area { grid-area: 1 / 3 / 1 / 4;   } */

  .address-area, .hours-area {
  
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column; 
  }

  .address-area {
  
    text-align: left;
  }

  .hours-area {
    text-align: center;
  }

    footer {
        display: flex;
        position: flex;
        justify-content: space-between;
        align-items: center;
    }

    .text-wrapper {
        font-family: 'Jacques';
    }

    .image-container {
    width: 100%;
  }

  .footer-image {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  @media only screen and (max-width: 768px)
  {
    h3 {
      flex-wrap: nowrap;
    }  
    .grid {
      grid-template-columns: 1fr 1fr;
      grid-template-areas: "address-area hours-area", "logo-area";
    }
    .logo-area {
      grid-area: 2 / 1 / 2 / 3;
    }
  }
</style>